<div class="d-flex justify-content-center">
  <div class="info p-3 mb-2 bg-dark text-white opacity col-md-4">

    <h2 class="text-white">Create Event</h2><br>

    <%= form_for @event do |f| %>

        <div class="form-group">
          <%= f.text_field :title, autofocus: true, class: 'form-control input-lg', placeholder:'Title' %>
        </div>

        <div class="form-group">
          <%= f.text_field :location, class: 'form-control input-lg', placeholder:'Location'  %>
        </div>

        <div class="form-group">
          <%= f.text_field :date, data: { behavior: "flatpickr"}, placeholder: 'Date' %>
        </div>

        <div class="actions">
          <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
        </div>

    <% end %>

  </div>
</div>
