<div class="d-flex justify-content-center">
  <div class="info p-3 mb-2 bg-dark text-white opacity col-md-8">

    <% if !@users.empty? %>

      <h2 class="text-white">All Users</h2><br>
      <div class="table-responsive">
        <table class="table table-dark">

          <thead class="thead-light">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>

          <tbody>

            <% @users.each do |user| %>

              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
              </tr>

            <% end %>

          </tbody>

        </table>
      </div>

    <% else %>
      <h2 class="text-white">No events found,</h2>
    <% end %>

  </div>
</div>